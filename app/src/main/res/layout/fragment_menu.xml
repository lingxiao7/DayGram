<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="55dp">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">
            <View
                android:layout_width="7dp"
                android:layout_height="20dp"
                android:background="#000000"
                android:paddingRight="8dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/diary_list_menu_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="August"
                android:textSize="20sp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:background="#000000"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/diary_list_menu_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:background="#000000"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/diary_list_menu_new"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/add_today_btn"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:background="#000000"
                android:paddingRight="8dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/diary_list_menu_show"
                android:layout_width="58dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="@null"
                android:src="@drawable/change_view_btn"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:src="@drawable/abc_popup_background_mtrl_mult"
                android:layout_gravity="top"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout >